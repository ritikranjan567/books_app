<h2>Categories List</h2>

<%= link_to  "+ New Category", new_category_path %>
<br><br>

<% if @categories.size > 0 %>
  <table>
    <thead>
      <tr><th>Name</th>
      <th>Actions</th><tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td> <%= category.name %> </td>
          <td>
            <%= link_to("Delete", category_path(category.id), method: :delete) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>  
<% end %>